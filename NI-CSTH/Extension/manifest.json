{
  "manifest_version": 2,

  "name": "NI-CSTH",
  "description": "NI-CSTH description",
  "version": "1.0.2",

  "browser_action": {
    "default_popup": "popup/html/popup.html"
  },
  
  "background":{
	"scripts":  ["assets/jquery-2.1.4.min.js",
	            "cores/js/datastructures.js",
	            "cores/js/messaging.js", 
	            "cores/js/background.js", 
	            "cores/js/idle.js"],
	"persistent": true
  },
  "permissions": [
    "activeTab",
	  "tabs",
	 "storage",
	 "notifications"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  
}