{
  "manifest_version": 2,

  "name": "Timer",
  "description": "This is simply timer for Google's Chrome Exthensions.",
  "version": "1.0",
  
  "background":{
   "scripts": ["background.js"],
    "persistent": true
  },
	
  "permissions": [
    "storage",
	"tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}